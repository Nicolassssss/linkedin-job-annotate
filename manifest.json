{
  "manifest_version": 3,
  "name": "LinkedIn職缺備註工具",
  "version": "1.0",
  "description": "為LinkedIn職缺加上個人備註，方便快速檢索",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/jobs/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
